{
  "name": "Katameros.bible",
  "description": "Daily coptic church readings",
  "version": "1.0.0",
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:minaalfy/katameros.bible.git"
  },
  "keywords": [
    "katameros",
    "coptic",
    "breviary",
    "Orthodox",
    "Synaxarium",
    "pwa",
    "11ty"
  ],
  "author": {
    "name": "Mina Paulis",
    "email": "minaalfy@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/minaalfy/katameros.bible/issues"
  },
  "homepage": "https://katameros.bible",
  "lint-staged": {
    "*.html": "prettier --write",
    "*.css": "stylelint --cache --fix",
    "*.js": "eslint --cache --fix"
  },
  "scripts": {
    "clean": "rimraf _site",
    "create": "rimraf ./src/articles && node ./katameros-preparation/fetch-content.js",
    "prepare": "npx husky install",
    "preview": "npx vite preview",
    "predev": "run-s clean",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:eleventy": "npx @11ty/eleventy --serve --incremental",
    "prebuild": "run-s clean",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:eleventy": "npx @11ty/eleventy",
    "lint": "run-s lint:*",
    "lint:html": "npx prettier --check \"src/**/*.html\"",
    "lint:stylelint": "npx stylelint \"src/**/*.css\"",
    "lint:eslint": "npx eslint --ext .js src/",
    "format": "run-s format:*",
    "format:html": "npx prettier --write \"src/**/*.html\"",
    "format:stylelint": "npx stylelint \"src/**/*.css\" --fix",
    "format:eslint": "npx eslint --ext .js src/ --fix",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-plugin-vite": "^4.0.0",
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.21.3",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.16.5",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.14",
    "bible-passage-reference-parser": "^2.0.1",
    "browserslist": "^4.16.6",
    "cheerio": "^1.0.0-rc.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-compat": "^4.0.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "node-fetch-cache": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rimraf": "^4.3.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-no-unsupported-browser-features": "^6.1.0",
    "stylelint-order": "^6.0.3",
    "tailwindcss": "^3.2.7",
    "vite-plugin-pwa": "^0.14.1"
  },
  "dependencies": {
    "@11ty/eleventy-upgrade-help": "^2.0.5",
    "alpinejs": "^3.12.0",
    "core-js": "^3.20.2",
    "flowbite": "^1.6.3"
  }
}
